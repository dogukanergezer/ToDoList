@model IEnumerable<TaskItem>
@{
    ViewData["Title"] = "Tasks";
}

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Yeni Görev Ekle", "Create", "Tasks", null, new { @class = "btn btn-success" })
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered" id="Task_List" style="width:100%">
            <thead>
                <tr>
                    <td>Yapılacak İş</td>
                    <td>Tamamlandı Mı?</td>
                    <td>Oluşturma Tarihi</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.TaskName</td>
                            <td>@task.IsCompleted</td>
                            <td>@task.DateCreated.ToShortDateString()</td>,
                            <td class="text-center">@Html.ActionLink("Edit", "Edit", "Tasks", new { Id = task.Id }, new { @class = "btn btn-primary" }) | @Html.ActionLink("Delete", "Delete", "Tasks", new { Id = task.Id }, new { @class = "btn btn-danger" }) </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            Kayıtlar Bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
